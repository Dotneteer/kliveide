{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
			"@/*": ["./src/*"],
      "@styles/*": ["./src/assets/styles/*"],
      "@messaging/*": ["./common/messaging/*"],
      "@state/*": ["./common/state/*"],
      "@utils/*": ["./common/utils/*"],
		},
  },
  "include": [
    "package.json", 
    "electron", 
    "src/**/*",
    "common/**/*"
  ]
}
