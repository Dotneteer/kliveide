{
  "name": "klive-ide",
  "productName": "Klive IDE",
  "version": "0.31.1",
  "description": "Sinclair Retro computer emulator and IDE for Mac, Windows and Linux",
  "author": {
    "name": "Istvan Novak",
    "email": "dotneteer@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dotneteer/kliveide.git"
  },
  "keywords": [
    "ZX Spectrum",
    "ZX Spectrum Next",
    "Cambridge Z88",
    "Z80",
    "Z80N",
    "Emulator"
  ],
  "bugs": "https://github.com/Dotneteer/kliveide/issues",
  "homepage": "https://github.com/Dotneteer/kliveide",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "tsc && electron-vite build",
    "build:check": "tsc && vite build",
    "build:win": "npm run build && electron-builder build --win --x64",
    "build:mac": "npm run build && electron-builder build --mac --x64",
    "build:mac:arm64": "npm run build && electron-builder build --mac --arm64",
    "build:linux": "npm run build && electron-builder build --linux --x64",
    "build:linux:arm64": "npm run build && electron-builder build --linux --arm64",
    "test": "vitest run",
    "doc:dev": "next",
    "doc:build": "next build",
    "doc:start": "next start",
    "bootstrap:ci": "npm ci"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint-community/regexpp": "^4.10.0",
    "@monaco-editor/react": "^4.6.0",
    "@tanstack/react-virtual": "^3.0.0-beta.32",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.2.0",
    "eslint": "^8.31.0",
    "expect": "^29.3.1",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-popper": "^2.3.0",
    "react-virtualized-auto-sizer": "^1.0.24",
    "sass": "^1.75.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-electron-plugin": "^0.8.3",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.2"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "electron-updater": "^6.1.8",
    "next": "^14.0.0",
    "nextra": "^2.13.2",
    "nextra-theme-docs": "^2.13.2"
  },
  "build": {
    "appId": "dotneteer.kliveide",
    "productName": "Klive IDE",
    "artifactName": "KliveIdeSetup-${version}-${arch}.${ext}",
    "directories": {
      "buildResources": "buildResources",
      "output": "artifacts/"
    },
    "mac": {
      "target": "pkg",
      "icon": "public/images/klive-logo.icns"
    },
    "win": {
      "target": "nsis",
      "asar": false,
      "icon": "public/images/512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/images/512x512.png"
    },
    "dmg": {
      "backgroundColor": "#00b4cc",
      "window": {
        "width": 512,
        "height": 380
      }
    },
    "files": [
      "!.prettierrc",
      "!.vscode",
      "!CHANGELOG.md",
      "!next.config.js",
      "!_docs",
      "!docs-out",
      "!pages",
      "!public",
      "!release",
      "!src",
      "!test",
      "!node_modules/next/**/*",
      "!node_modules/next*/**/*",
      "!node_modules/nextra/**/*",
      "!node_modules/nextra*/**/*"
    ],
    "extraResources": [
      "node_modules/monaco-editor/min/vs/**/*"
    ]
  }
}
