{
  "name": "@dotneteer/kliveide",
  "version": "0.0.1",
  "description": "Full-fledged ZX Spectrum IDE with VS Code integration",
  "author": "Istvan Novak",
  "license": "MIT",
  "repository": "https://github.com/Dotneteer/kliveide",
  "keywords": [
    "ZX Spectrum",
    "Z80",
    "emulator"
  ],
  "bugs": "https://github.com/Dotneteer/kliveide/issues",
  "homepage": "https://github.com/Dotneteer/kliveide",
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap",
    "build": "lerna run build",
    "dev": "cd packages/kliveide-emu && npm run dev",
    "start": "cd packages/kliveide-emu && npm start",
    "build:win": "cd packages/kliveide-emu && electron-builder build --win --x64",
    "build:mac": "cd packages/kliveide-emu && electron-builder build --mac --x64"
  },
  "devDependencies": {
    "@types/node-ipc": "^9.1.3",
    "electron-builder": "^22.8.0",
    "lerna": "^3.22.1",
    "mocha": "^8.0.1",
    "ts-mocha": "^7.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "node-ipc": "^9.1.1"
  }
}
