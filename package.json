{
  "name": "klive-ide",
  "productName": "Klive IDE",
  "version": "0.30.3",
  "description": "Retro computer emulator and IDE for Mac, Windows, and Linux",
  "author": {
    "name": "Istvan Novak",
    "email": "dotneteer@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dotneteer/kliveide.git"
  },
  "keywords": [
    "ZX Spectrum",
    "Z80",
    "emulator"
  ],
  "bugs": "https://github.com/Dotneteer/kliveide/issues",
  "homepage": "https://github.com/Dotneteer/kliveide",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:check": "tsc && vite build",
    "build:win": "npm run build && electron-builder build --win --x64",
    "build:mac": "npm run build && electron-builder build --mac --x64",
    "build:linux": "npm run build && electron-builder build --linux --x64",
    "doc:dev": "next",
    "doc:build": "next build",
    "doc:start": "next start",
    "bootstrap:ci": "npm ci"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "devDependencies": {
    "@monaco-editor/react": "^4.5.1",
    "@tanstack/react-virtual": "^3.0.0-beta.32",
    "@types/lodash": "^4.14.200",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^4.0.2",
    "electron": "^27.0.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.31.0",
    "expect": "^29.3.1",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-popper": "^2.3.0",
    "react-virtualized-auto-sizer": "^1.0.20",
    "sass": "^1.63.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.2",
    "vite-electron-plugin": "^0.8.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-monaco-editor": "^1.1.0"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777"
    }
  },
  "dependencies": {
    "next": "^14.0.0",
    "nextra": "^2.13.2",
    "nextra-theme-docs": "^2.13.2"
  },
  "build": {
    "appId": "dotneteer.kliveide",
    "productName": "Klive IDE",
    "artifactName": "KliveIdeSetup-${version}.${ext}",
    "directories": {
      "buildResources": "buildResources",
      "output": "artifacts/"
    },
    "mac": {
      "target": "pkg",
      "icon": "public/images/klive-logo.icns"
    },
    "win": {
      "target": "nsis",
      "asar": false,
      "icon": "public/images/512x512.png"
    },    
    "linux": {
      "target": "AppImage",
      "icon": "public/images/512x512.png"
    },
    "dmg": {
      "backgroundColor": "#00b4cc",
      "window": {
        "width": 512,
        "height": 380
      }
    },
    "files": [
      "!.prettierrc",
      "!.vscode",
      "!CHANGELOG.md",
      "!next.config.js",
      "!_docs",
      "!docs-out",
      "!pages",
      "!public",
      "!release",
      "!src",
      "!test",
      "!node_modules/next/**/*",
      "!node_modules/next*/**/*",
      "!node_modules/nextra/**/*",
      "!node_modules/nextra*/**/*"
    ],
    "extraResources": [
      "node_modules/monaco-editor/min/vs/**/*"
    ]
  }
}
