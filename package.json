{
  "name": "klive-ide",
  "productName": "Klive IDE",
  "version": "0.40.0",
  "description": "Sinclair Retro computer emulator and IDE for Mac, Windows and Linux",
  "author": {
    "name": "Istvan Novak",
    "email": "dotneteer@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dotneteer/kliveide.git"
  },
  "keywords": [
    "ZX Spectrum",
    "ZX Spectrum Next",
    "Cambridge Z88",
    "Z80",
    "Z80N",
    "Emulator"
  ],
  "bugs": "https://github.com/Dotneteer/kliveide/issues",
  "homepage": "https://github.com/Dotneteer/kliveide",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "tsc && electron-vite build && electron-builder",
    "build:check": "tsc && electron-vite build",
    "build:win": "npm run build && electron-builder build --win --x64",
    "build:mac": "npm run build && electron-builder build --mac --x64",
    "build:mac:arm64": "npm run build && electron-builder build --mac --arm64",
    "build:linux": "npm run build && electron-builder build --linux --x64",
    "build:linux:arm64": "npm run build && electron-builder build --linux --arm64",
    "test": "vitest run",
    "doc:dev": "next",
    "doc:build": "next build",
    "doc:start": "next start",
    "bootstrap:ci": "npm ci"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint-community/regexpp": "^4.10.0",
    "@monaco-editor/react": "^4.6.0",
    "@types/lodash": "^4.17.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^8.31.0",
    "execa": "^8.0.1",
    "expect": "^29.3.1",
    "lodash": "^4.17.21",
    "nextra": "^3.3.0",
    "nextra-theme-docs": "^3.3.0",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-popper": "^2.3.0",
    "react-virtualized-auto-sizer": "^1.0.24",
    "sass": "^1.75.0",
    "sharp": "^0.33.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.14",
    "vite-electron-plugin": "^0.8.3",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.0.5"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-select": "^2.1.6",
    "classnames": "^2.5.1",
    "electron-updater": "^6.3.0",
    "overlayscrollbars-react": "^0.5.6",
    "react-switch": "^7.0.0",
    "usehooks-ts": "^3.1.1",
    "virtua": "^0.40.0",
    "vite-plugin-copy": "^0.1.6"
  },
  "build": {
    "appId": "dotneteer.kliveide",
    "productName": "Klive IDE",
    "artifactName": "KliveIdeSetup-${version}-${arch}.${ext}",
    "directories": {
      "output": "artifacts/"
    },
    "mac": {
      "target": "pkg",
      "icon": "public/images/klive-logo.icns"
    },
    "win": {
      "target": "nsis",
      "asar": false,
      "icon": "public/images/512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/images/512x512.png"
    },
    "dmg": {
      "backgroundColor": "#00b4cc",
      "window": {
        "width": 512,
        "height": 380
      }
    },
    "files": [
      "**/*",
      "!.prettierrc",
      "!.prettierrc.yaml",
      "!.vscode",
      "!_input",
      "!CHANGELOG.md",
      "!next.config.js",
      "!_docs",
      "!docs-out",
      "!pages",
      "!public",
      "!release",
      "!src",
      "!test",
      "!node_modules/next/**/*",
      "!node_modules/next*/**/*",
      "!node_modules/nextra/**/*",
      "!node_modules/nextra*/**/*"
    ],
    "extraResources": [
      {
        "from": "src/public/roms",
        "to": "roms",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/public/keymappings",
        "to": "keymappings",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/public/project-templates",
        "to": "project-templates",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/public/images",
        "to": "images",
        "filter": [
          "**/*"
        ]
      },
      "node_modules/monaco-editor/min/vs/**/*"
    ]
  }
}
