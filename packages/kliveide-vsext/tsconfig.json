{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "out",
    "baseUrl": ".",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@abstractions/*": ["src/abstractions/*"],
      "@state/*": ["src/shared/state/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/vscode/vscode.d.ts",
    "./node_modules/vscode/lib/*",
    "src/custom-editors/disassembly/disassembly.js"
  ]
}
