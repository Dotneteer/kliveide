{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "*": ["node_modules/*"],
      "@abstractions/*": ["src/abstractions/*"],
      "@core/*": ["src/core/*"],
      "@state/*": ["src/shared/state/*"],
      "@shared/*": ["src/shared/*"],
      "@messaging/*": ["@core/messaging/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
