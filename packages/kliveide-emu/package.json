{
  "name": "kliveide-emu",
  "version": "0.9.0",
  "description": "ZX Spectrum Emulator",
  "main": "./dist/main.bundle.js",
  "author": "Istvan Novak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dotneteer/kliveide.git"
  },
  "keywords": [
    "ZX Spectrum",
    "Z80",
    "emulator"
  ],
  "bugs": "https://github.com/Dotneteer/kliveide/issues",
  "homepage": "https://github.com/Dotneteer/kliveide",
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "build": "npm run vmbuild && rimraf dist && cross-env NODE_ENV=development webpack --progress --colors",
    "build:emu": "npm run build",
    "dev": "npm run vmbuild && rimraf dist && cross-env NODE_ENV=development webpack --watch --progress --colors",
    "tscbuild": "tsc",
    "mergewat": "node ./scripts/mergewat.js",
    "build:sp48": "npm run mergewat -- sp48.json && wat2wasm ./build/sp48.wat -o ./build/sp48.wasm",
    "build:sp128": "npm run mergewat -- sp128.json && wat2wasm ./build/sp128.wat -o ./build/sp128.wasm",
    "build:cz88": "npm run mergewat -- cz88.json && wat2wasm ./build/cz88.wat -o ./build/cz88.wasm",
    "build:tz80": "npm run mergewat -- tz80.json && wat2wasm ./build/tz80.wat -o ./build/tz80.wasm",
    "build:tz80n": "npm run mergewat -- tz80n.json && wat2wasm ./build/tz80n.wat -o ./build/tz80n.wasm",
    "test": "ts-mocha -p ./tsconfig.json ./test/**/*.test.ts",
    "build:win": "npm run build && electron-builder build --win --x64",
    "build:mac": "npm run build && electron-builder build --mac --x64",
    "build:linux": "npm run build && electron-builder build --linux --x64",
    "vmbuild": "npm run build:sp48 && npm run build:sp128 && npm run build:cz88 && npm run build:tz80 && npm run build:tz80n"
  },
  "build": {
    "appId": "dotneteer.klive",
    "productName": "Klive",
    "artifactName": "${productName}Setup-${version}.${ext}",
    "directories": {
      "buildResources": "buildResources",
      "app": "./dist/",
      "output": "../../artifacts/"
    },
    "mac": {
      "target": "pkg"
    },
    "win": {
      "target": "nsis",
      "asar": false
    },
    "fileAssociations": [
      {
        "ext": "klive",
        "name": "Klive Startup File",
        "role": "Editor"
      }
    ]
  },
  "dependencies": {
    "@electron/remote": "^1.0.0",
    "@types/electron-localshortcut": "^3.1.0",
    "electron-localshortcut": "^3.2.1",
    "electron-window-state": "^5.0.3",
    "express": "^4.17.1",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.7",
    "@types/koa-router": "^7.4.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.21",
    "copy-pkg-json-webpack-plugin": "0.0.39",
    "copy-webpack-plugin": "^6.0.2",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "expect": "^25.1.0",
    "html-webpack-plugin": "^4.3.0",
    "lodash": "^4.17.19",
    "mocha": "^7.1.1",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "svelte": "^3.23.2",
    "svelte-loader": "^2.13.6",
    "ts-loader": "^7.0.5",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.8.3",
    "wat2wasm": "^1.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "worklet-loader": "^1.0.0"
  }
}
