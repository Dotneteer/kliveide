{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "module": "commonjs",
      "target": "ESNext",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": false,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "downlevelIteration": true,
      "resolveJsonModule": true,
      "paths": {
        "@/*": ["../src/*"],
        "styles/*": ["../src/assets/styles/*"],
        "@messaging/*": ["../common/messaging/*"],
        "@state/*": ["../common/state/*"],
        "@z80/*": ["../src/emu/z80/*"],
      },
    },
    "include": ["../**/*"],
    "exclude": [
      "node_modules",
      "**/build/*",
      "**/*.d.ts"
    ]
  }
  