{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@abstractions/*": ["./src/core/abstractions/*"],
      "@ext-core/*": ["./src/extensions/core/*"],
      "@ext-main/*": ["./src/extensions/core-main/*"],
      "@ext/*": ["./src/extensions/*"],
      "@core/*": ["./src/core/*"],
      "@components/*": ["./src/emu-ide/components/*"],
      "@themes/*": ["./src/emu-ide/themes/*"],
      "@services/*": ["./src/emu-ide/services/*"],
      "@state/*": ["./src/core/state/*"],
      "@shared/*": ["./src/shared/*"],
      "@messaging/*": ["./src/core/messaging/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/build/*",
    "**/*.d.ts"
  ]
}
