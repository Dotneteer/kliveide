{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@abstractions/*": ["./src/core/abstractions/*"],
      "@modules-core/*": ["./src/modules/core/*"],
      "@modules-main/*": ["./src/modules/core-main/*"],
      "@modules/*": ["./src/modules/*"],
      "@core/*": ["./src/core/*"],
      "@components/*": ["./src/common-ui/components/*"],
      "@themes/*": ["./src/common-ui/themes/*"],
      "@services/*": ["./src/common-ui/services/*"],
      "@state/*": ["./src/core/state/*"],
      "@messaging/*": ["./src/core/messaging/*"],
      "@emu/*": ["./src/emu/*"],
      "@ide/*": ["./src/ide/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/build/*",
    "**/*.d.ts"
  ]
}
